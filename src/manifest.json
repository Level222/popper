{
  "manifest_version": 3,
  "name": "Popper",
  "version": "1.0.0",
  "description": "Pop up tabs or links",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "24": "icons/icon-24.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Pop up a tab"
  },
  "background": {
    "service_worker": "background.js"
  }
}
